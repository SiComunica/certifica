// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id              Int                 @id @default(autoincrement())
  company_name    String
  email          String
  conventions    CompanyConvention[]
}

model Convention {
  id                  Int                 @id @default(autoincrement())
  code                String
  discount_percentage Float
  companies          CompanyConvention[]
}

model CompanyConvention {
  id               Int        @id @default(autoincrement())
  company_id       Int
  convention_id    Int
  notification_sent Boolean   @default(false)
  company          Company    @relation(fields: [company_id], references: [id])
  convention       Convention @relation(fields: [convention_id], references: [id])
} 